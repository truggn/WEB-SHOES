<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
        crossorigin="anonymous">
    <link rel="stylesheet" href="./css/login.css">
    <title>Bootstrap Login Form</title>
</head>
<body>
    <div class="container">
        <div class="row">
           <div class="col-md-5 mx-auto">
              <div id="first">
                 <div class="myform form ">
                    <div class="logo mb-3">
                       <div class="col-md-12 text-center">
                          <h1>Login</h1>
                       </div>
                    </div>
                          <form name="group" action="{{ route('LoginPageAdminsController.store') }}" method="post">
                          <div class="form-group">
                             <label for="exampleInputEmail1">Email address:</label>
                             <input type="email" name="email" class="form-control" value="{{ flashMessages.get('email') || '' }}" id="email" aria-describedby="emailHelp"
                                placeholder="Nhập email" required>
                                <p style="color: red;">{{ flashMessages.get('auth.errors.uid') || '' }}</p>
                          </div>
                          <div class="form-group">
                             <label for="exampleInputEmail1">Password:</label>
                             <input type="password" name="password" id="password" class="form-control"
                                aria-describedby="emailHelp" placeholder="Nhập Password" required>
                                <p style="color: red">{{ flashMessages.get('auth.errors.password') || '' }}</p>
                          </div>
                          <div class="form-group">
                             <p class="text-center"><a href="/forget-password">Forget Password?</a></p>
                          </div>
                          <div class="col-md-12 text-center ">
                             <button type="submit" id="loginPage" 
                                class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
                          </div>
                          <div class="col-md-12 ">
                             <div class="login-or">
                                <hr class="hr-or">
                                <span class="span-or">or</span>
                             </div>
                          </div>
                          <div class="col-md-12 mb-3">
                             <p class="text-center">
                                <a href="javascript:void();" class="google btn mybtn"><i class="fa fa-google-plus">
                                   </i> Signup using Google
                                </a>
                             </p>
                          </div>
                          <div class="form-group">
                             <p class="text-center">Don't have account? <a href="/register" id="signup">Sign up here</a></p>
                          </div>
                          </form>
                 </div>
              </div>
           </div>
        </div>
     </div>
</body>

</html>